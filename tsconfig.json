{
  "include": [
    "./src/**/*/*",
    "./src/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "./node_modules",
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "incremental": false,
    "declaration": true,
    "sourceMap": false,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/core": ["./src/core"],
      "@/common": ["./src/common"],
      "@/extends/*": ["./src/extends/*"],
      "@/modules/*": ["./src/modules/*"],
    }
  }
}

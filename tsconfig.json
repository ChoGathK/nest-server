{
  "include": [
    "src",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "target": "ES6",
    "outDir": "dist",
    "module": "CommonJS",
    "sourceMap": false,
    "declaration": true,
    "incremental": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/core/*": ["./src/core/*"],
      "@/infrastructures/*": ["./src/infrastructures/*"],
      "@/modules/*": ["./src/modules/*"]
    }
  }
}
